<svg class="theme--pure">
	<defs>
		<link rel="stylesheet" href="styles.css" />
		<link rel="import" href="/mnt/sysassets/widgets_common.gui" />
		<link rel="import" href="/mnt/sysassets/widgets/baseview_widget.gui" />
		<link rel="import" href="/mnt/sysassets/widgets/cycleview_widget.gui" />
		<link rel="import" href="/mnt/sysassets/widgets/square_button_widget.gui" />
		<link rel="import" href="/mnt/sysassets/widgets/tumblerview_widget.gui" />
		<link rel="import" href="/mnt/sysassets/widgets/combo_button_widget.gui" />

		<symbol id="stats">
			<g transform="translate(24,-12)">
				<arc
					id="lstat-goal"
					x="-20"
					y="-26"
					width="54"
					height="54"
					arc-width="3"
					start-angle="0"
					sweep-angle="360"
					fill-opacity="0.5"
				>
					<animate attributeName="arc-width" to="3" dur="0s" begin="select;unselect" />
					<animate attributeName="fill-opacity" to="0.5" dur="0s" begin="select;unselect" />

					<animate attributeName="arc-width" to="54" dur="0s" begin="enable+2s" />
					<animate
						attributeName="fill-opacity"
						from="0"
						to="1"
						dur="0.4s"
						begin="enable+2s"
						easing="ease-in-out"
					/>
				</arc>
				<arc
					id="lstat-progress"
					x="-20"
					y="-26"
					width="54"
					height="54"
					arc-width="3"
					start-angle="0"
					sweep-angle="0"
				>
					<animate attributeName="sweep-angle" to="0" dur="0s" begin="select;unselect" />

					<animate attributeName="sweep-angle" dur="0.1s" begin="select+1.1s" easing="ease-in" />
					<animate attributeName="sweep-angle" from="360" dur="0.2s" begin="select+0.9s" easing="ease-out" />
					<animate
						attributeName="sweep-angle"
						from="0"
						to="360"
						dur="0.4s"
						begin="select+0.5s"
						easing="ease-in"
					/>
				</arc>
				<image id="lstat-icon" class="icon--activity primary" x="$-52" y="-22" fill-opacity="0.8">
					<animate attributeName="fill" dur="0s" begin="select;unselect" />

					<animate attributeName="fill" to="fb-black" dur="0.4s" begin="enable+2s" easing="ease-in-out" />
				</image>

				<animateTransform
					attributeType="scale"
					from="1"
					to="0.9"
					dur="0.1s"
					begin="enable+2.1s"
					easing="ease-in"
				/>
				<animateTransform
					attributeType="scale"
					from="0.9"
					to="1.1"
					dur="0.2s"
					begin="enable+2.2s"
					easing="ease-in"
				/>
				<animateTransform
					attributeType="scale"
					from="1.1"
					to="1"
					dur="0.1s"
					begin="enable+2.4s"
					easing="ease-in"
				/>
			</g>
			<text id="lstat-value" class="text text--lg primary" text-anchor="start" text-length="8" x="65" y="2" />
			<text
				id="lstat-units"
				class="text text--sm secondary"
				text-anchor="start"
				text-length="8"
				x="60"
				y="$-20"
			/>

			<g transform="translate(100%-24,-12)">
				<arc
					id="rstat-goal"
					x="-34"
					y="-26"
					width="54"
					height="54"
					arc-width="3"
					start-angle="0"
					sweep-angle="360"
					fill-opacity="0.5"
				>
					<animate attributeName="arc-width" to="3" dur="0s" begin="select;unselect" />
					<animate attributeName="fill-opacity" to="0.5" dur="0s" begin="select;unselect" />

					<animate attributeName="arc-width" to="48" dur="0s" begin="enable+2s" />
					<animate
						attributeName="fill-opacity"
						from="0"
						to="1"
						dur="0.4s"
						begin="enable+2s"
						easing="ease-in-out"
					/>
				</arc>
				<arc
					id="rstat-progress"
					x="-34"
					y="-26"
					width="54"
					height="54"
					arc-width="3"
					start-angle="0"
					sweep-angle="0"
				>
					<animate attributeName="sweep-angle" to="0" dur="0s" begin="select;unselect" />

					<animate attributeName="sweep-angle" dur="0.1s" begin="select+1.1s" easing="ease-in" />
					<animate attributeName="sweep-angle" from="360" dur="0.2s" begin="select+0.9s" easing="ease-out" />
					<animate
						attributeName="sweep-angle"
						from="0"
						to="360"
						dur="0.4s"
						begin="select+0.5s"
						easing="ease-in"
					/>
				</arc>
				<image id="rstat-icon" class="icon--activity primary" x="$-52" y="-22" fill-opacity="0.8">
					<animate attributeName="fill" dur="0s" begin="select;unselect" />

					<animate attributeName="fill" to="fb-black" dur="0.4s" begin="enable+2s" easing="ease-in-out" />
				</image>

				<animateTransform
					attributeType="scale"
					from="1"
					to="0.9"
					dur="0.1s"
					begin="enable+2.1s"
					easing="ease-in"
				/>
				<animateTransform
					attributeType="scale"
					from="0.9"
					to="1.1"
					dur="0.2s"
					begin="enable+2.2s"
					easing="ease-in"
				/>
				<animateTransform
					attributeType="scale"
					from="1.1"
					to="1"
					dur="0.1s"
					begin="enable+2.4s"
					easing="ease-in"
				/>
			</g>
			<text id="rstat-value" class="text text--lg primary" text-anchor="end" text-length="8" x="100%-65" y="2" />
			<text
				id="rstat-units"
				class="text text--sm secondary"
				text-anchor="end"
				text-length="8"
				x="100%-60"
				y="$-20"
			/>
		</symbol>

		<symbol id="donate-popup">
			<svg>
				<defs>
					<symbol id="tumblerview-digit">
						<use id="code" href="#tumblerview">
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="0" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="1" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="2" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="3" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="4" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="5" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="6" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="7" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="8" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="9" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="A" />
							</use>
							<use id="content" href="#tumbler-item">
								<set href="value/text" attributeName="text-buffer" to="B" />
							</use>
						</use>
					</symbol>
				</defs>

				<rect x="0" y="0" height="100%" width="100%" fill="fb-black" />

				<g class="donate-step">
					<text class="text text--sm-plus" x="50%" y="48" text-anchor="middle" text-buffer="Please go to" />
					<text
						class="text--extra-bold text--xl"
						x="50%"
						y="$+12"
						text-anchor="middle"
						text-buffer="pure.amod.io"
						fill="fb-orange"
					/>
					<textarea class="text text--sm-plus" x="0" y="$-30" width="100%" height="140" text-anchor="middle">
						to donate and get access to PRO features â€” activity stats, theming, & on-device quick toggles.
					</textarea>
				</g>

				<g class="donate-step" display="none">
					<text class="text text--sm" x="50%" y="22" text-anchor="middle" text-buffer="ENTER CODE FROM" />
					<text
						class="text--extra-bold text--sm"
						x="50%"
						y="45"
						text-anchor="middle"
						text-buffer="pure.amod.io"
					/>

					<section x="-45" y="$-10">
						<use href="#tumblerview-digit" x="10" y="0">
							<set href="code" attributeName="id" to="code1" />
						</use>
						<use href="#tumblerview-digit" x="105" y="0">
							<set href="code" attributeName="id" to="code2" />
						</use>
						<use href="#tumblerview-digit" x="200" y="0">
							<set href="code" attributeName="id" to="code3" />
						</use>
					</section>
				</g>

				<use id="donate-button" href="#combo-button-lower-right" fill="fb-orange">
					<set href="combo-button-icon" attributeName="href" to="images/next.png" />
					<set href="combo-button-icon-press" attributeName="href" to="images/next-pressed.png" />
					<set href="combo-button-stroke" attributeName="display" to="inline" />
					<set href="combo-button-fill" attributeName="display" to="inline" />

					<animate attributeName="fill" to="fb-red" dur="0s" begin="enable" />
					<animate attributeName="fill" to="fb-orange" dur="0.2s" begin="enable+0.5s" easing="ease-out" />
				</use>
			</svg>
		</symbol>
	</defs>
</svg>
